from utility_scripts.scraper_utils import pull_gamelogs, get_player_hrefs

import string
letters = list(string.ascii_uppercase)
# letters = ['A', 'B', 'C']

href_pdf = get_player_hrefs(letters)
print(f"Total Player Count to Pull: {href_pdf.shape[0]}")
print(href_pdf)
results = pull_gamelogs(href_pdf)

pos_list=['QB', 'RB', 'TE', 'WR']
for pos in pos_list:
    results[f"{pos}_gamelogs"].to_csv(f'scraped_data/SB_ERA_game_logs_{pos}.csv', index=False)
